<div class="container">
	<div class="row">
		<div class="col-xs-10">
			<table border="1">
				<thead>
					<tr>
						<th>購入日時</th>
						<th>購入者</th>
						<th>注文個数</th>
						<th>注文ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @orders.each do |order| %>
					<tr>
						<td><%= order.created_at %></td>
						<td><% @end_user = EndUser.with_deleted.find(order.end_user_id) %>
							<%= @end_user.fullname %></td>
						<td><%= order.order_details.sum(:amount) %>
						</td>
						<td><%= order.order_stauts %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
