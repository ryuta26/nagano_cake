<div class="container">
	<div class="row">
		<h4>商品一覧画面</h4>
		<div class="col-xs-10">
			<table class="table table-border">
				<thead>
					<tr>
						<th>商品ID</th>
						<th>商品名</th>
						<th>税抜価格</th>
						<th>ジャンル</th>
						<th>ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @items.each do |item| %>
					<tr>
						<td>
							<%= item.id %>
						</td>
						<td>
							<%= item.name %>

						</td>
						<td>
							<%= item.price %>
						</td>
						<td>
							<%= item.genre.name %>
						</td>
						<td>
							<%= item.sale_status %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
