<div class="container">
	<div class="row">
		<h4>商品新規登録画面</h4>
		<div class="col-xs-10">
			<%= form_for(@item, url: admin_items_path) do |f| %>
			<div class="col-xs-4">
				<%= f.attachment_field :image %>
		    </div>
		    <div class="col-xs-8">
			    <div>
					<%= f.label :商品名 %>
					<%= f.text_field :name %>
			    </div>
			    <div>
					<%= f.label :商品説明 %>
					<%= f.text_area :introduction %>
			    </div>
			    <div>
					<%= f.label :ジャンル %>
					<%= f.collection_select :genre_id, Genre.all, :id, :name %>
			    </div>
			    <div>
					<%= f.label :税抜価格 %>
					<%= f.text_field :price %>
			    </div>
			    <div>
					<%= f.label :販売ステータス %>
					<label><%= f.radio_button :sale_status, "販売中" %> 販売中 </label>
					<label><%= f.radio_button :sale_status, "販売停止中" %> 販売停止中</label>
				</div>
				<div>
					<%= f.submit "新規登録",class: 'btn btn-primary' %>
				</div>
				<% end %>
		    </div>
		</div>
	</div>
</div>