<div class="container">
	<div class="row">
		<div class="col-sm-10">
			<h4>購入情報入力</h4>
			<%= form_for(@order, url:public_end_user_orders_path(@end_user)) do |f| %>
			<div>
				<%= f.label :支払方法 %>
			</div>
			<label>
				<%= f.radio_button :payment_method, "クレジットカード" %>クレジットカード
			</label>
			<label>
				<%= f.radio_button :payment_method, "銀行振り込み" %>銀行振り込み
			</label>
			<div>
				<h4>お届け先</h4>
			</div>
			<div>
				<label>
					<%= f.radio_button :address_status, "ご自身の住所" %>
					ご自身の住所
				</label>
			</div>
			<div>
				<label>
					<%= f.radio_button :address_status, "登録済住所から選択" %>登録済住所から選択 

						<%= collection_select(:address,:id , Address.where(end_user_id: current_end_user.id), :id, :haisousaki) %>
						
				</label>
			</div>
			<div>
				<label>
					<%= f.radio_button :address_status, "新しいお届け先" %>
					新しいお届け先
					<div>
						<%= f.label :郵便番号 %>
						<%= f.text_field :postal_code %>
					</div>
					<div>
						<%= f.label :住所 %>
						<%= f.text_field :domicile %>
					</div>
					<div>
						<%= f.label :宛名 %>
						<%= f.text_field :name %>
					</div>
				</label>
					
					<%= f.hidden_field :freight_fee, :value => "800" %>
					<%= f.hidden_field :order_stauts, :value => "入金待ち" %>
					<%= f.hidden_field :total_due, :value => "0" %>

				<%= f.submit "確認画面へ進む" %>
			</div>

			<% end %>
		</div>
	</div>
</div>