<div class="container">
	<div class="row">
		<div class="col-xs-6">
			<h4>登録情報編集</h4>
			<%= form_for(@end_user, url: public_end_user_path) do |f| %>
				<table border="1">
				<tr>
					<th><%= f.label :氏名 %></th>
					<td>
						<%= f.text_field :last_name %>
						<%= f.text_field :first_name %>
					</td>
				</tr>
				<tr>
					<th>カナ</th>
					<td>
						<%= f.text_field :last_kana %>
						<%= f.text_field :first_kana %>
					</td>
				</tr>
				<tr>
					<th>郵便番号</th>
					<td>
						<%= f.text_field :postal_code %>
					</td>
				</tr>
				<tr>
					<th>住所</th>
					<td>
						<%= f.text_field :domicile %>
					</td>
				</tr>
				<tr>
					<th>メールアドレス &nbsp&nbsp&nbsp</th>
					<td>
						<%= f.email_field :email %>
					</td>
				</tr>
			</table>
			<%= f.submit "編集内容を保存する",class: 'btn btn-primary' %>
			<% end %>
		</div>
	</div>
</div>
